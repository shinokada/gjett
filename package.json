		"svelte": "5.0.0-next.140",
		"svelte-5-ui-lib": "^0.4.13",
		"svelte-check": "^3.7.1",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
	},
	"type": "module"
